# Type defines if the object is a texture, sprite, weapon, etc
type=weapon

# Name must be unique
name=Pistol

############################
# Type specific attributes #
############################

# The maxium damage
damage_high=30

# The minium damage
damage_low=10

range=10

max_ammo=17
start_ammo=17

# (True/False)
is_full_auto=False

# Drops the weapon when the player dies (True/False)
loose_weapon_on_death=False

# Stealth
loudness=0.6

# How long the reload animation plays for
reload_time=1

# How long it takes to play the fire animation
fire_time=0.2

# Locations of each sprite sheet
fire_animation=Assets/Textures/Guns/Pistol/fire.png
reload_animation=Assets/Textures/Guns/Pistol/reload.png
jam_animation=Assets/Textures/Guns/Pistol/jam.png

# Size of each sprite in pixels (x,y)
texture_size=32,32

# Space between sprite sheet in pixels
texture_buffer=1

# Locations for each sound effect
shot_sfx=Assets/Sounds/Player/Guns/Pistol/pistol_fire.wav
reload_sfx=Assets/Sounds/Player/Guns/Pistol/pistol_reload.wav
jam_sfx=Assets/Sounds/Player/Guns/Pistol/pistol_jam.wav